@model List<CourseViewModel>
<h1>Catalogo dei corsi</h1>

@foreach (CourseViewModel course in Model)
{
<div class="row rourse">
    <div class="col-md-1">
        <img src="@course.ImagePath" width="52" height="52" alt="">
    </div>
    <div class="col-md-5">
        <h2>@course.Title</h2>
        <author>di @course.Author</author>
    </div>
    <div class="col-md-2 rating">
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
    </div>
    <div class="col-md-2 price">
        EUR 10,99€<br /><s>EUR 12,99€</s>
    </div>
    <div class="col-md-2">
        <a class="btn btn-outline-primary" asp-action="Detail" asp-route-id="5">Dettaglio corso</a>
    </div>
</div>
}
